#include "p16F628a.inc"    
 __CONFIG _FOSC_INTOSCCLK & _WDTE_OFF & _PWRTE_OFF & _MCLRE_ON & _BOREN_OFF & _LVP_OFF & _CPD_OFF & _CP_OFF    

RES_VECT  CODE    0x0000            ; processor reset vector   
    GOTO    START                   ; go to beginning of program

; TODO ADD INTERRUPTS HERE IF USED
MAIN_PROG CODE                      ; let linker place main program

timer EQU 0x35
timer2 EQU 0x34
i EQU 0x30
j EQU 0x31
k EQU 0x32
a EQU 0x33
START
    MOVLW 0x07 ;Apagar comparadores
    MOVWF CMCON ; habilitar pines para 1/0 (entrada, salida)
    BCF STATUS, RP1 ;Cambiar al banco 1
    BSF STATUS, RP0 
    MOVLW b'00000000' ;Establecer puerto B como salida excepto b0
    MOVWF TRISB 
    CLRF TRISA
    BCF STATUS, RP0 ;Regresar al banco 0

 ;---------------------------------------------------------------------------------------------

inicio:
    ;verde encender 
    bsf PORTB,0  ;poner el puerto B1 (bit 5 del puerto B) en 1
    call RETARDO1
    call RETARDO2
    call RETARDO2
    call RETARDO2
    call RETARDO2
    nop
    nop
    nop
    ;verde apagar 
    bcf PORTB,0  ;poner el puerto B1 (bit 5 del puerto B) en 0
    call RETARDO3
    call RETARDO4
    nop
    nop
    nop
    goto inicio
;rutina de tiempo
RETARDO1:  
    nop	      ;NOPs de relleno (ajuste de tiempo)
    movlw d'59' ;establecer valor de la variable i
    movwf i
iloop:
    nop	      ;NOPs de relleno (ajuste de tiempo)
    movlw d'50' ;establecer valor de la variable j
    movwf j
jloop:	
    nop
    nop         ;NOPs de relleno (ajuste de tiempo)
    movlw d'61' ;establecer valor de la variable k
    movwf k
kloop:	
    
    decfsz k,f  
    goto kloop ;[i][j][k]
    decfsz j,f
    goto jloop
    decfsz i,f
    goto iloop
    movlw d'4' ;establecer valor de la variable k
    movwf a
    decfsz a,f  
    goto $-1 
    return	;salir de la rutina de tiempo y regresar al 
		;valor de contador de programa 58
RETARDO2:
    MOVLW d'176' ;MUEVE 255 A W
    MOVWF timer2 ; MUEVE EL VALOR 255 A VARIABLE
    DECFSZ timer2 ;decrementa timer y pregunta hasta 0
    GOTO $-1 ; LOOP DE DECREMENTO
    return 
RETARDO3: 
    nop	      ;NOPs de relleno (ajuste de tiempo)
    movlw d'47' ;establecer valor de la variable i
    movwf i
iloop2:
    nop	      ;NOPs de relleno (ajuste de tiempo)
    movlw d'50' ;establecer valor de la variable j
    movwf j
jloop2:	
    nop         ;NOPs de relleno (ajuste de tiempo)
    nop
    nop
    movlw d'60' ;establecer valor de la variable k
    movwf k
kloop2:	
    decfsz k,f  
    goto kloop2 ;[i][j][k]
    decfsz j,f
    goto jloop2
    decfsz i,f
    goto iloop2
    movlw d'4' ;establecer valor de la variable k
    movwf a
    decfsz a,f  
    goto $-1 
    return	;salir de la rutina de tiempo y regresar al 
		;valor de contador de programa 58}
RETARDO4:
    MOVLW d'95' ;MUEVE 255 A W
    MOVWF timer2 ; MUEVE EL VALOR 255 A VARIABLE
    DECFSZ timer2 ;decrementa timer y pregunta hasta 0
    GOTO $-1 ; LOOP DE DECREMENTO
    return 
    END 
